function initPromoIntegration() {
    // Vérifier si un code promo est déjà actif
    const savedPromo = localStorage.getItem('anduxara_active_promo');
    if (savedPromo) {
        const promoData = JSON.parse(savedPromo);
        applyPromoToCart(promoData.code, promoData.discount);
    }
    
    // Écouter les messages entre pages (pour reductions.html)
    window.addEventListener('storage', function(e) {
        if (e.key === 'anduxara_active_promo') {
            if (e.newValue) {
                const promoData = JSON.parse(e.newValue);
                applyPromoToCart(promoData.code, promoData.discount);
            } else {
                removePromoFromCart();
            }
        }
    });
}

