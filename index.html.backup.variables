function processFloatingCheckout() {
    if (floatingCart.length === 0) {
        showNotification('Panier vide !', 'error');
        return;
    }
    
    const totalMRU = floatingCart.reduce((sum, item) => sum + (item.promoPrice * item.quantity), 0);
    const totalFCFA = Math.round(totalMRU * 2.5);
    
    // INTÉGRATION AVEC LE SYSTÈME DE FIDÉLITÉ
    integrerFideliteAchat(totalMRU);
    
    const productList = floatingCart.map(item => 
        `${item.name} (x${item.quantity}) - ${item.promoPrice * item.quantity} MRU`
    ).join('\n');
    
