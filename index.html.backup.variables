// ===== SYSTÈME DE RECOMMANDATIONS IA =====
class StyleAdvisor {
    constructor() {
        this.userBehavior = JSON.parse(localStorage.getItem('anduxara_user_behavior')) || {
            views: [],
            cart: [],
            categories: []
        };
    }
    
    // Fonction pour tracker la consultation
    trackProductView(productName, category, price) {
        console.log('👀 Produit consulté:', productName);
        
        this.userBehavior.views.push({
            productName,
            category,
            price,
            timestamp: Date.now()
        });
        
        // Limiter à 50 consultations maximum
        if (this.userBehavior.views.length > 50) {
            this.userBehavior.views = this.userBehavior.views.slice(-50);
        }
        
        this.saveBehavior();
        this.updateRecommendations();
    }
    
    // Fonction pour tracker l'ajout au panier
    trackAddToCart(productName, category, price) {
        console.log('🛒 Ajout au panier:', productName);
        
        this.userBehavior.cart.push({
            productName,
            category, 
            price,
            timestamp: Date.now()
        });
        
        this.saveBehavior();
        this.updateRecommendations();
    }
    
    // Sauvegarder le comportement
    saveBehavior() {
        localStorage.setItem('anduxara_user_behavior', JSON.stringify(this.userBehavior));
    }
    
    // Analyser les préférences
    analyzePreferences() {
        const preferences = {
            favoriteCategories: {},
            priceRange: { min: Infinity, max: 0 },
            totalViews: this.userBehavior.views.length
        };
        
        // Analyser les catégories préférées
        this.userBehavior.views.forEach(view => {
            preferences.favoriteCategories[view.category] = 
                (preferences.favoriteCategories[view.category] || 0) + 1;
            
            // Analyser la fourchette de prix
            if (view.price < preferences.priceRange.min) preferences.priceRange.min = view.price;
            if (view.price > preferences.priceRange.max) preferences.priceRange.max = view.price;
        });
        
        return preferences;
    }
    
    // Générer des recommandations
    generateRecommendations() {
        const preferences = this.analyzePreferences();
        const allProducts = this.getAllProducts();
        
        if (preferences.totalViews === 0) {
            return this.getPopularProducts(allProducts);
        }
        
        // Filtrer par catégories préférées
        const favoriteCategories = Object.keys(preferences.favoriteCategories)
            .sort((a, b) => preferences.favoriteCategories[b] - preferences.favoriteCategories[a])
            .slice(0, 2); // Top 2 catégories
        
        let recommendations = allProducts.filter(product => 
            favoriteCategories.includes(product.category)
        );
        
        // Si pas assez de recommandations, ajouter des produits populaires
        if (recommendations.length < 4) {
            recommendations = [...recommendations, ...this.getPopularProducts(allProducts)];
        }
        
        // Mélanger et limiter à 4 produits
        return this.shuffleArray(recommendations).slice(0, 4);
    }
    
    // Obtenir tous les produits disponibles
    getAllProducts() {
        return [
            { name: 'T-shirt logo arabe', category: 't-shirts', price: 349, image: 'images/t-shirt-logo-arabe.jpeg' },
            { name: 'Ensemble capuche style arabe', category: 'ensembles', price: 419, image: 'images/ensemble-capuchon-arabe.jpeg' },
            { name: 'Combinaison T-shirt et Capuche', category: 'ensembles', price: 419, image: 'images/combinaison.jpeg' },
            { name: 'T-shirt Enfant', category: 'enfants', price: 279, image: 'images/t-shirt-enfant.jpeg' },
            { name: 'Ensemble T-shirt et jogging', category: 'ensembles', price: 559, image: 'images/t-shirt-et-jogging.jpeg' },
            { name: 'Pull bleu', category: 't-shirts', price: 489, image: 'images/pull-bleu.jpeg' },
            { name: 'Capuchon blanc', category: 'accessoires', price: 209, image: 'images/capuchon-blanc.jpeg' },
            { name: 'Babs Premium', category: 'ensembles', price: 1049, image: 'images/babs.jpeg' },
            { name: 'T-shirt Fille Noir', category: 't-shirts', price: 279, image: 'images/fillenoir.jpeg' },
            { name: 'T-shirt Fille Blanc', category: 't-shirts', price: 419, image: 'images/filleblan.jpeg' },
            { name: 'Pull Blanc', category: 'pulls', price: 419, image: 'images/pull-blanc.jpeg' },
            { name: 'T-shirt Beige', category: 't-shirts', price: 279, image: 'images/beige-tshirt.jpeg' },
            { name: 'T-shirt Blanc', category: 't-shirts', price: 279, image: 'images/blanctshirt.jpeg' },
            { name: 'T-shirt ADX Noir', category: 't-shirts', price: 279, image: 'images/adx-noir.jpeg' }
        ];
    }
    
    // Produits populaires (fallback)
    getPopularProducts(products) {
        return products.filter(p => 
            ['T-shirt logo arabe', 'Ensemble capuche style arabe', 'Babs Premium', 'T-shirt Fille Noir'].includes(p.name)
        );
    }
    
    // Mélanger un tableau
    shuffleArray(array) {
        return array.sort(() => Math.random() - 0.5);
    }
    
    // Mettre à jour l'affichage des recommandations
    updateRecommendations() {
        const container = document.getElementById('recommendations-container');
        if (!container) return;
        
        const recommendations = this.generateRecommendations();
        
        container.innerHTML = recommendations.map(product => `
            <div class="product-card" data-category="${product.category}">
                <div class="product-image-container">
                    <img src="${product.image}" alt="${product.name}" class="product-img" loading="lazy">
                    <div class="recommendation-badge">🌟 Recommandé</div>
                </div>
                <div class="product-info">
                    <h3 class="product-title">${product.name}</h3>
                    <div class="product-price">
                        <span class="promo-price">${product.price} MRU</span>
                    </div>
                    <div class="product-actions">
                        <button class="add-to-cart" onclick="addToCartAndTrack('${product.name}', '${product.category}', ${product.price})">
                            Ajouter au panier
                        </button>
                    </div>
                </div>
            </div>
        `).join('');
    }
}

