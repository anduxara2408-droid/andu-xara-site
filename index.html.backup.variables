// ===== SYSTÈME CODES PROMO INTÉGRÉ AU PANIER =====
let activePromoCode = null;
let promoDiscount = 0;

function applyPromoToCart(promoCode, discountPercentage) {
    activePromoCode = promoCode;
    promoDiscount = discountPercentage;
    
    // Recalculer tous les prix avec la réduction
    floatingCart.forEach(item => {
        item.promoPrice = Math.round(item.price * (1 - discountPercentage / 100));
    });
    
    localStorage.setItem('anduxara_cart', JSON.stringify(floatingCart));
    updateFloatingCart();
    showNotification(`✅ Code promo appliqué : ${discountPercentage}% de réduction !`);
}

function removePromoFromCart() {
    activePromoCode = null;
    promoDiscount = 0;
    
    // Rétablir les prix originaux
    floatingCart.forEach(item => {
        item.promoPrice = item.price;
    });
    
    localStorage.setItem('anduxara_cart', JSON.stringify(floatingCart));
    updateFloatingCart();
    showNotification('🗑️ Code promo retiré');
}

// Mettre à jour la fonction de calcul du total
function calculateCartTotal() {
    let subtotal = floatingCart.reduce((sum, item) => {
        return sum + (item.promoPrice * item.quantity);
    }, 0);
    
    let discount = 0;
    if (promoDiscount > 0) {
        discount = subtotal * (promoDiscount / 100);
    }
    
    return {
        subtotal: subtotal,
        discount: discount,
        total: subtotal - discount
    };
}

// ===== FONCTION PRINCIPALE POUR AJOUTER AU PANIER =====
function addToCartAndTrack(productName, category, price) {
    console.log('🛒 Ajout au panier:', productName, 'Prix:', price + ' MRU');

    // Vibration si supporté
    if (navigator.vibrate) navigator.vibrate(50);

    // Rechercher si le produit existe déjà
    const existingItem = floatingCart.find(item => item.name === productName);

    if (existingItem) {
        // Limite à 20 produits maximum
        if (existingItem.quantity < 20) {
            existingItem.quantity += 1;
        } else {
            showNotification('❌ Maximum 20 produits par article atteint !', 'error');
            return;
        }
    } else {
        floatingCart.push({
            name: productName,
            price: price,
            promoPrice: price,
            quantity: 1,
            category: category,
            addedAt: new Date().toISOString()
        });
    }

    // Sauvegarder dans le localStorage
    localStorage.setItem('anduxara_cart', JSON.stringify(floatingCart));

    // Afficher une notification
    showNotification('✅ ' + productName + ' ajouté au panier !');

    // Mettre à jour l'affichage du panier
    updateFloatingCart();
}

