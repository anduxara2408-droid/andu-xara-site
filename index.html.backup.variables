// ===== FONCTION D'INTÉGRATION FIDÉLITÉ CORRIGÉE =====
function integrerFideliteAchat(totalMRU) {
    try {
        console.log('🎯 Intégration fidélité pour achat:', totalMRU + ' MRU');
        
        // Vérifier si le système de récompenses existe
        if (typeof initialiserSystemeRecompenses === 'undefined') {
            console.log('⚠️ Système fidélité non disponible, initialisation simplifiée...');
            initialiserSystemeFideliteSimplifie(totalMRU);
            return Math.floor(totalMRU / 10); // Retourne les points calculés
        }
        
        // Utiliser le système existant si disponible
        const systeme = initialiserSystemeRecompenses();
        
        // Calcul des points gagnés (1 point par 10 MRU dépensés)
        const pointsGagnes = Math.floor(totalMRU / 10);
        
        if (pointsGagnes > 0) {
            systeme.data.points += pointsGagnes;
            systeme.data.historique.push({
                type: 'achat_reussi',
                points: pointsGagnes,
                montant: totalMRU,
                raison: `Points gagnés pour achat de ${totalMRU} MRU`,
                date: new Date().toISOString(),
                statut: 'credite'
            });
            
            systeme.calculerNiveau();
            systeme.sauvegarderDonnees();
            systeme.mettreAJourAffichage();
            
            console.log(`🎯 ${pointsGagnes} points gagnés pour achat de ${totalMRU} MRU`);
        }
        
        return pointsGagnes;
    } catch (error) {
        console.error('Erreur intégration fidélité:', error);
        // Système de secours
        initialiserSystemeFideliteSimplifie(totalMRU);
        return Math.floor(totalMRU / 10);
    }
}

// ===== SYSTÈME DE FIDÉLITÉ SIMPLIFIÉ (SECOURS) =====
function initialiserSystemeFideliteSimplifie(totalMRU) {
    try {
        console.log('🔄 Initialisation système fidélité simplifié...');
        
        // Points gagnés
        const pointsGagnes = Math.floor(totalMRU / 10);
        
        // Sauvegarder dans localStorage
        const fideliteData = JSON.parse(localStorage.getItem('anduxara_fidelite')) || {
            points: 0,
            niveau: 1,
            historique: []
        };
        
        fideliteData.points += pointsGagnes;
        fideliteData.historique.push({
            type: 'achat_reussi',
            points: pointsGagnes,
            montant: totalMRU,
            date: new Date().toISOString()
        });
        
        localStorage.setItem('anduxara_fidelite', JSON.stringify(fideliteData));
        
        console.log(`✅ ${pointsGagnes} points fidélité ajoutés (système simplifié)`);
        
        return pointsGagnes;
    } catch (error) {
        console.error('Erreur système fidélité simplifié:', error);
        return 0;
    }
}

// ===== VALIDATION DES CODES PROMO =====
async function validateAndApplyPromo() {
    const promoInput = document.getElementById('promoInput');
    const promoMessage = document.getElementById('promoMessage');
    const promoButton = document.getElementById('promoButton');
    
    const code = promoInput.value.trim().toUpperCase();
    
    if (!code) {
        promoMessage.textContent = '❌ Veuillez entrer un code promo';
        promoMessage.style.color = '#e74c3c';
        return;
    }
    
    // Désactiver le bouton pendant la validation
    promoButton.disabled = true;
    promoButton.textContent = 'Validation...';
    
    try {
        // Simulation de validation - À REMPLACER par ton système Firebase
        const validationResult = await simulatePromoValidation(code);
        
        if (validationResult.valid) {
            applyPromoToCart(code, validationResult.discount);
            
            // Sauvegarder pour les autres pages
            localStorage.setItem('anduxara_active_promo', JSON.stringify({
                code: code,
                discount: validationResult.discount,
                appliedAt: new Date().toISOString()
            }));
            
            promoMessage.textContent = `✅ Code "${code}" appliqué : ${validationResult.discount}% de réduction !`;
            promoMessage.style.color = '#27ae60';
            promoInput.value = '';
            
        } else {
            promoMessage.textContent = `❌ Code "${code}" invalide ou expiré`;
            promoMessage.style.color = '#e74c3c';
        }
        
    } catch (error) {
        console.error('Erreur validation promo:', error);
        promoMessage.textContent = '❌ Erreur de validation';
        promoMessage.style.color = '#e74c3c';
    } finally {
        // Réactiver le bouton
        promoButton.disabled = false;
        promoButton.textContent = 'Appliquer ✅';
    }
}

// Simulation de validation - À ADAPTER avec ton système Firebase
async function simulatePromoValidation(code) {
    // Codes promo de test - REMPLACE par ta logique Firebase
    const validCodes = {
        'BIENVENUE15': 15,
        'ANDU2025': 20,
        'SOLDE30': 30,
        'PREMIUM25': 25
    };
    
    // Simuler un délai réseau
    await new Promise(resolve => setTimeout(resolve, 1000));
    
    if (validCodes[code]) {
        return {
            valid: true,
            discount: validCodes[code],
            message: `Réduction de ${validCodes[code]}% appliquée`
        };
    } else {
        return {
            valid: false,
            message: 'Code invalide'
        };
    }
}

