// ===== SYSTÈME D'ESSAYAGE VIRTUEL PAR IA =====
class VirtualFittingAI {
    constructor() {
        this.videoElement = document.getElementById('camera-feed');
        this.canvasElement = document.getElementById('virtual-fitting-canvas');
        this.ctx = this.canvasElement.getContext('2d');
        this.stream = null;
        this.selectedClothing = null;
        this.isFittingActive = false;
        this.clothingData = {
            'tshirt-logo-arabe': {
                name: 'T-shirt Logo Arabe',
                price: 349,
                category: 't-shirts',
                overlay: this.generateTShirtOverlay('#667eea', '👕')
            },
            'ensemble-capuche': {
                name: 'Ensemble Capuche Style Arabe', 
                price: 419,
                category: 'ensembles',
                overlay: this.generateHoodieOverlay('#2c3e50', '🎽')
            },
            'pull-bleu': {
                name: 'Pull Bleu',
                price: 489,
                category: 't-shirts', 
                overlay: this.generateSweaterOverlay('#3498db', '🧥')
            },
            'babs-premium': {
                name: 'Babs Premium',
                price: 1049,
                category: 'ensembles',
                overlay: this.generatePremiumOverlay('#9b59b6', '👑')
            }
        };
    }

    // Démarrer l'essayage virtuel
    async startVirtualFitting() {
        try {
            this.showLoading(true);
            
            // Demander l'accès à la caméra
            this.stream = await navigator.mediaDevices.getUserMedia({ 
                video: { 
                    width: 640, 
                    height: 480,
                    facingMode: 'user' 
                } 
            });
            
            this.videoElement.srcObject = this.stream;
            this.isFittingActive = true;
            
            // Ajuster la taille du canvas
            this.canvasElement.width = this.videoElement.videoWidth;
            this.canvasElement.height = this.videoElement.videoHeight;
            
            // Démarrer la boucle de rendu
            this.startRenderingLoop();
            
            // Mettre à jour l'interface
            document.getElementById('start-camera').style.display = 'none';
            document.getElementById('stop-camera').style.display = 'inline-block';
            
            this.showNotification('🎥 Caméra activée ! Choisissez un vêtement.');
            
        } catch (error) {
            console.error('Erreur caméra:', error);
            this.showNotification('❌ Impossible d\'accéder à la caméra', 'error');
        } finally {
            this.showLoading(false);
        }
    }

    // Arrêter l'essayage virtuel
    stopVirtualFitting() {
        if (this.stream) {
            this.stream.getTracks().forEach(track => track.stop());
            this.stream = null;
        }
        
        this.isFittingActive = false;
        this.videoElement.srcObject = null;
        
        // Réinitialiser l'interface
        document.getElementById('start-camera').style.display = 'inline-block';
        document.getElementById('stop-camera').style.display = 'none';
        
        this.ctx.clearRect(0, 0, this.canvasElement.width, this.canvasElement.height);
        
        this.showNotification('⏹️ Essayage virtuel arrêté');
    }

    // Boucle de rendu pour l'overlay en temps réel
    startRenderingLoop() {
        const render = () => {
            if (this.isFittingActive && this.selectedClothing) {
                this.renderClothingOverlay();
                requestAnimationFrame(render);
            }
        };
        render();
    }

    // Rendre l'overlay du vêtement
    renderClothingOverlay() {
        this.ctx.clearRect(0, 0, this.canvasElement.width, this.canvasElement.height);
        
        if (this.videoElement.videoWidth > 0) {
            // Dessiner la vidéo
            this.ctx.drawImage(this.videoElement, 0, 0, this.canvasElement.width, this.canvasElement.height);
            
            // Appliquer l'overlay du vêtement sélectionné
            const clothing = this.clothingData[this.selectedClothing];
            if (clothing && clothing.overlay) {
                this.applyClothingOverlay(clothing.overlay);
            }
        }
    }

    // Appliquer l'overlay du vêtement (simulation IA avancée)
    applyClothingOverlay(overlayConfig) {
        const { type, color, label, size } = overlayConfig;
        const centerX = this.canvasElement.width / 2;
        const centerY = this.canvasElement.height / 3;
        
        this.ctx.save();
        
        // Simulation de détection du corps par IA
        this.ctx.fillStyle = color + '40'; // Couleur semi-transparente
        this.ctx.strokeStyle = color;
        this.ctx.lineWidth = 3;
        
        switch(type) {
            case 'tshirt':
                // Forme de T-shirt
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 50, 60 * size, 80 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                
                // Manches
                this.ctx.beginPath();
                this.ctx.ellipse(centerX - 70, centerY - 20, 25 * size, 40 * size, 0, 0, 2 * Math.PI);
                this.ctx.ellipse(centerX + 70, centerY - 20, 25 * size, 40 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                break;
                
            case 'hoodie':
                // Capuche + sweat
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 70, 70 * size, 90 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                
                // Corps
                this.ctx.beginPath();
                this.ctx.rect(centerX - 60 * size, centerY - 20, 120 * size, 150 * size);
                this.ctx.fill();
                this.ctx.stroke();
                break;
                
            case 'sweater':
                // Pull
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 30, 80 * size, 100 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                break;
                
            case 'premium':
                // Vêtement premium avec détails
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 40, 85 * size, 110 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                
                // Détails décoratifs
                this.ctx.fillStyle = '#ffffff';
                this.ctx.font = 'bold 20px Arial';
                this.ctx.fillText('✨', centerX - 10, centerY - 35);
                break;
        }
        
        // Label du vêtement
        this.ctx.fillStyle = '#ffffff';
        this.ctx.strokeStyle = '#000000';
        this.ctx.lineWidth = 2;
        this.ctx.font = 'bold 16px Arial';
        this.ctx.strokeText(label, centerX - 30, centerY + 100);
        this.ctx.fillText(label, centerX - 30, centerY + 100);
        
        this.ctx.restore();
    }

    // Générer les overlays pour différents types de vêtements
    generateTShirtOverlay(color, label) {
        return { type: 'tshirt', color, label, size: 1.0 };
    }

    generateHoodieOverlay(color, label) {
        return { type: 'hoodie', color, label, size: 1.0 };
    }

    generateSweaterOverlay(color, label) {
        return { type: 'sweater', color, label, size: 1.0 };
    }

    generatePremiumOverlay(color, label) {
        return { type: 'premium', color, label, size: 1.0 };
    }
// Capturer l'essayage - VERSION INTELLIGENTE
captureVirtualFitting() {
    if (!this.selectedClothing) {
        this.showNotification('❌ Veuillez sélectionner un vêtement d\'abord', 'error');
        return;
    }

    console.log('🤖 Début capture intelligente...');

    // Vérifier que la caméra est active
    if (!this.isFittingActive) {
        this.showNotification('❌ Activez la caméra d\'abord', 'error');
        return;
    }

    // Créer un canvas haute qualité pour la capture
    const captureCanvas = document.createElement('canvas');
    const captureCtx = captureCanvas.getContext('2d');
    
    // Utiliser les dimensions réelles de la vidéo
    captureCanvas.width = this.videoElement.videoWidth;
    captureCanvas.height = this.videoElement.videoHeight;
    
    // 1. CAPTURER LA VIDÉO ACTUELLE
    captureCtx.drawImage(this.videoElement, 0, 0, captureCanvas.width, captureCanvas.height);
    
    // 2. APPLIQUER LE VÊTEMENT VIRTUEL SUR LA CAPTURE
    const clothing = this.clothingData[this.selectedClothing];
    if (clothing && clothing.overlay) {
        this.applyClothingToCapture(captureCtx, captureCanvas, clothing.overlay);
    }
    
    // 3. AJOUTER UNE BANDE D'INFORMATION PROFESSIONNELLE
    this.addInfoOverlay(captureCtx, captureCanvas, clothing);
    
    // 4. CONVERTIR EN IMAGE HAUTE QUALITÉ
    const capturedImageURL = captureCanvas.toDataURL('image/jpeg', 0.95);
    console.log('✅ Capture HD créée');

    const productImage = this.getProductImage(this.selectedClothing);

    // 5. AFFICHER LE RÉSULTAT PROFESSIONNEL
    this.displayCaptureResult(capturedImageURL, clothing, productImage);
    
    this.showNotification('📸 Capture parfaite ! Vérifiez votre essayage 👆');
}

// Appliquer le vêtement sur la capture
applyClothingToCapture(ctx, canvas, overlayConfig) {
    const { type, color, label, size } = overlayConfig;
    const centerX = canvas.width / 2;
    const centerY = canvas.height / 3;
    
    ctx.save();
    
    // Style professionnel pour le vêtement virtuel
    ctx.fillStyle = color + 'AA'; // Transparence ajustée
    ctx.strokeStyle = color;
    ctx.lineWidth = 6;
    ctx.globalAlpha = 0.8;
    
    // FORMES INTELLIGENTES adaptées à la capture
    switch(type) {
        case 'tshirt':
            // T-shirt réaliste
            this.drawRealisticTShirt(ctx, centerX, centerY, size, color);
            break;
            
        case 'hoodie':
            // Hoodie réaliste
            this.drawRealisticHoodie(ctx, centerX, centerY, size, color);
            break;
            
        case 'sweater':
            // Pull réaliste
            this.drawRealisticSweater(ctx, centerX, centerY, size, color);
            break;
            
        case 'premium':
            // Vêtement premium
            this.drawPremiumClothing(ctx, centerX, centerY, size, color);
            break;
    }
    
    // Label élégant
    this.drawElegantLabel(ctx, centerX, centerY + 150, label, color);
    
    ctx.restore();
}

// Dessiner un T-shirt réaliste
drawRealisticTShirt(ctx, x, y, size, color) {
    // Corps du T-shirt
    ctx.beginPath();
    ctx.ellipse(x, y - 60, 100 * size, 130 * size, 0, 0, 2 * Math.PI);
    ctx.fill();
    ctx.stroke();
    
    // Manches réalistes
    ctx.beginPath();
    ctx.ellipse(x - 95, y - 30, 35 * size, 55 * size, 0.3, 0, 2 * Math.PI);
    ctx.ellipse(x + 95, y - 30, 35 * size, 55 * size, -0.3, 0, 2 * Math.PI);
    ctx.fill();
    ctx.stroke();
    
    // Col
    ctx.beginPath();
    ctx.arc(x, y - 180 * size, 25 * size, 0, 2 * Math.PI);
    ctx.fill();
    ctx.stroke();
}

// Dessiner un hoodie réaliste
drawRealisticHoodie(ctx, x, y, size, color) {
    // Capuche
    ctx.beginPath();
    ctx.ellipse(x, y - 80, 110 * size, 140 * size, 0, 0.2 * Math.PI, 0.8 * Math.PI);
    ctx.fill();
    ctx.stroke();
    
    // Corps
    ctx.beginPath();
    ctx.rect(x - 85 * size, y - 30, 170 * size, 200 * size);
    ctx.fill();
    ctx.stroke();
    
    // Poche
    ctx.beginPath();
    ctx.rect(x - 40 * size, y + 50, 80 * size, 60 * size);
    ctx.stroke();
}

// Dessiner un pull réaliste
drawRealisticSweater(ctx, x, y, size, color) {
    // Corps arrondi
    ctx.beginPath();
    ctx.ellipse(x, y - 40, 120 * size, 150 * size, 0, 0, 2 * Math.PI);
    ctx.fill();
    ctx.stroke();
    
    // Texture tricot (effet visuel)
    ctx.setLineDash([5, 3]);
    ctx.lineWidth = 2;
    for(let i = -80; i <= 80; i += 20) {
        ctx.beginPath();
        ctx.ellipse(x + i, y - 40, 115 * size, 145 * size, 0, 0, Math.PI);
        ctx.stroke();
    }
    ctx.setLineDash([]);
}

// Dessiner vêtement premium
drawPremiumClothing(ctx, x, y, size, color) {
    // Forme élégante
    ctx.beginPath();
    ctx.ellipse(x, y - 50, 130 * size, 160 * size, 0, 0, 2 * Math.PI);
    ctx.fill();
    ctx.stroke();
    
    // Détails de luxe
    ctx.fillStyle = '#FFD700'; // Or
    ctx.font = 'bold 28px Arial';
    ctx.fillText('✨', x - 15, y - 45);
    ctx.fillText('⭐', x + 80, y + 30);
    ctx.fillText('👑', x - 90, y + 30);
}

// Dessiner label élégant
drawElegantLabel(ctx, x, y, label, color) {
    ctx.fillStyle = 'rgba(0, 0, 0, 0.7)';
    ctx.fillRect(x - 100, y - 25, 200, 50);
    
    ctx.fillStyle = '#FFFFFF';
    ctx.font = 'bold 20px Arial';
    ctx.textAlign = 'center';
    ctx.fillText(label, x, y + 5);
    ctx.textAlign = 'left';
}

// Ajouter overlay d'information professionnelle
addInfoOverlay(ctx, canvas, clothing) {
    const margin = 20;
    
    // Bande supérieure
    ctx.fillStyle = 'rgba(102, 126, 234, 0.9)';
    ctx.fillRect(0, 0, canvas.width, 80);
    
    // Logo et titre
    ctx.fillStyle = '#FFFFFF';
    ctx.font = 'bold 24px Arial';
    ctx.fillText('ANDU-XARA', margin, 35);
    ctx.font = '18px Arial';
    ctx.fillText('Essayage Virtuel IA', margin, 60);
    
    // Bande inférieure
    ctx.fillStyle = 'rgba(42, 42, 42, 0.8)';
    ctx.fillRect(0, canvas.height - 60, canvas.width, 60);
    
    // Informations produit
    ctx.fillStyle = '#FFFFFF';
    ctx.font = 'bold 18px Arial';
    ctx.fillText(clothing.name, margin, canvas.height - 30);
    ctx.textAlign = 'right';
    ctx.fillText(clothing.price + ' MRU', canvas.width - margin, canvas.height - 30);
    ctx.textAlign = 'left';
    
    // Signature
    ctx.font = '14px Arial';
    ctx.fillStyle = 'rgba(255, 255, 255, 0.7)';
    ctx.fillText('andu-xara.com', canvas.width - 150, canvas.height - 10);
}

