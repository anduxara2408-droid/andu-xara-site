    // Partager l'essayage
    shareVirtualFitting() {
        if (!this.selectedClothing) {
            this.showNotification('❌ Rien à partager', 'error');
            return;
        }

        this.canvasElement.toBlob(blob => {
            const file = new File([blob], 'essayage-andu-xara.png', { type: 'image/png' });
            
            if (navigator.share) {
                navigator.share({
                    files: [file],
                    title: 'Mon essayage virtuel Andu-Xara',
                    text: `J'essaie virtuellement le ${this.clothingData[this.selectedClothing].name} ! 👕`
                });
            } else {
                // Fallback pour navigateurs sans Web Share API
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = 'essayage-andu-xara.png';
                link.click();
                this.showNotification('📥 Image téléchargée !');
            }
        });
    }

    // Ajuster la taille du vêtement
    adjustClothingSize() {
        const size = document.getElementById('clothing-size').value;
        const sizeMultipliers = { s: 0.9, m: 1.0, l: 1.1, xl: 1.2 };
        
        if (this.selectedClothing) {
            this.clothingData[this.selectedClothing].overlay.size = sizeMultipliers[size];
        }
    }

    // Ajuster la couleur du vêtement
    adjustClothingColor() {
        const color = document.getElementById('clothing-color').value;
        const colorMap = {
            'original': '#667eea',
            'black': '#2c3e50', 
            'white': '#ecf0f1',
            'blue': '#3498db',
            'red': '#e74c3c'
        };
        
        if (this.selectedClothing) {
            this.clothingData[this.selectedClothing].overlay.color = colorMap[color];
        }
    }

    showLoading(show) {
        document.getElementById('fitting-loading').style.display = show ? 'flex' : 'none';
    }

    showNotification(message, type = 'success') {
        if (typeof showNotification === 'function') {
            showNotification(message, type);
        } else {
            alert(message);
        }
    }
}

