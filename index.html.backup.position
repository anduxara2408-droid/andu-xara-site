function addToCartAndTrack(productName, category, price) {
    console.log('üõí Ajout au panier:', productName, 'Prix:', price + ' MRU');

    // Vibration si support√©
    if (navigator.vibrate) navigator.vibrate(50);

    // Rechercher si le produit existe d√©j√†
    const existingItem = floatingCart.find(item => item.name === productName);

    if (existingItem) {
        // Limite √† 20 produits maximum
        if (existingItem.quantity < 20) {
            existingItem.quantity += 1;
        } else {
            showNotification('‚ùå Maximum 20 produits par article atteint !', 'error');
            return;
        }
    } else {
        floatingCart.push({
            name: productName,
            price: price,
            promoPrice: price,
            quantity: 1,
            category: category,
            addedAt: new Date().toISOString()
        });
