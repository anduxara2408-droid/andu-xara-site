    // Appliquer l'overlay du v√™tement (simulation IA avanc√©e)
    applyClothingOverlay(overlayConfig) {
        const { type, color, label, size } = overlayConfig;
        const centerX = this.canvasElement.width / 2;
        const centerY = this.canvasElement.height / 3;
        
        this.ctx.save();
        
        // Simulation de d√©tection du corps par IA
        this.ctx.fillStyle = color + '40'; // Couleur semi-transparente
        this.ctx.strokeStyle = color;
        this.ctx.lineWidth = 3;
        
        switch(type) {
            case 'tshirt':
                // Forme de T-shirt
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 50, 60 * size, 80 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                
                // Manches
                this.ctx.beginPath();
                this.ctx.ellipse(centerX - 70, centerY - 20, 25 * size, 40 * size, 0, 0, 2 * Math.PI);
                this.ctx.ellipse(centerX + 70, centerY - 20, 25 * size, 40 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                break;
                
            case 'hoodie':
                // Capuche + sweat
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 70, 70 * size, 90 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                
                // Corps
                this.ctx.beginPath();
                this.ctx.rect(centerX - 60 * size, centerY - 20, 120 * size, 150 * size);
                this.ctx.fill();
                this.ctx.stroke();
                break;
                
            case 'sweater':
                // Pull
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 30, 80 * size, 100 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                break;
                
            case 'premium':
                // V√™tement premium avec d√©tails
                this.ctx.beginPath();
                this.ctx.ellipse(centerX, centerY - 40, 85 * size, 110 * size, 0, 0, 2 * Math.PI);
                this.ctx.fill();
                this.ctx.stroke();
                
                // D√©tails d√©coratifs
                this.ctx.fillStyle = '#ffffff';
                this.ctx.font = 'bold 20px Arial';
                this.ctx.fillText('‚ú®', centerX - 10, centerY - 35);
                break;
        }
        
        // Label du v√™tement
        this.ctx.fillStyle = '#ffffff';
        this.ctx.strokeStyle = '#000000';
        this.ctx.lineWidth = 2;
        this.ctx.font = 'bold 16px Arial';
        this.ctx.strokeText(label, centerX - 30, centerY + 100);
        this.ctx.fillText(label, centerX - 30, centerY + 100);
        
        this.ctx.restore();
    }

    // G√©n√©rer les overlays pour diff√©rents types de v√™tements
    generateTShirtOverlay(color, label) {
