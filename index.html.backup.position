// ===== FONCTION D'INT√âGRATION FID√âLIT√â CORRIG√âE =====
function integrerFideliteAchat(totalMRU) {
    try {
        console.log('üéØ Int√©gration fid√©lit√© pour achat:', totalMRU + ' MRU');
        
        // V√©rifier si le syst√®me de r√©compenses existe
        if (typeof initialiserSystemeRecompenses === 'undefined') {
            console.log('‚ö†Ô∏è Syst√®me fid√©lit√© non disponible, initialisation simplifi√©e...');
            initialiserSystemeFideliteSimplifie(totalMRU);
            return Math.floor(totalMRU / 10); // Retourne les points calcul√©s
        }
        
        // Utiliser le syst√®me existant si disponible
        const systeme = initialiserSystemeRecompenses();
        
        // Calcul des points gagn√©s (1 point par 10 MRU d√©pens√©s)
        const pointsGagnes = Math.floor(totalMRU / 10);
        
        if (pointsGagnes > 0) {
            systeme.data.points += pointsGagnes;
            systeme.data.historique.push({
                type: 'achat_reussi',
                points: pointsGagnes,
                montant: totalMRU,
                raison: `Points gagn√©s pour achat de ${totalMRU} MRU`,
                date: new Date().toISOString(),
                statut: 'credite'
            });
            
            systeme.calculerNiveau();
            systeme.sauvegarderDonnees();
            systeme.mettreAJourAffichage();
            
            console.log(`üéØ ${pointsGagnes} points gagn√©s pour achat de ${totalMRU} MRU`);
        }
        
        return pointsGagnes;
    } catch (error) {
        console.error('Erreur int√©gration fid√©lit√©:', error);
        // Syst√®me de secours
        initialiserSystemeFideliteSimplifie(totalMRU);
        return Math.floor(totalMRU / 10);
    }
}

// ===== SYST√àME DE FID√âLIT√â SIMPLIFI√â (SECOURS) =====
function initialiserSystemeFideliteSimplifie(totalMRU) {
    try {
        console.log('üîÑ Initialisation syst√®me fid√©lit√© simplifi√©...');
        
        // Points gagn√©s
        const pointsGagnes = Math.floor(totalMRU / 10);
        
        // Sauvegarder dans localStorage
        const fideliteData = JSON.parse(localStorage.getItem('anduxara_fidelite')) || {
            points: 0,
            niveau: 1,
            historique: []
        };
        
        fideliteData.points += pointsGagnes;
        fideliteData.historique.push({
            type: 'achat_reussi',
            points: pointsGagnes,
            montant: totalMRU,
            date: new Date().toISOString()
        });
        
        localStorage.setItem('anduxara_fidelite', JSON.stringify(fideliteData));
        
        console.log(`‚úÖ ${pointsGagnes} points fid√©lit√© ajout√©s (syst√®me simplifi√©)`);
        
        return pointsGagnes;
    } catch (error) {
        console.error('Erreur syst√®me fid√©lit√© simplifi√©:', error);
        return 0;
    }
}

// ===== VALIDATION DES CODES PROMO =====
async function validateAndApplyPromo() {
    const promoInput = document.getElementById('promoInput');
    const promoMessage = document.getElementById('promoMessage');
    const promoButton = document.getElementById('promoButton');
    
    const code = promoInput.value.trim().toUpperCase();
    
    if (!code) {
        promoMessage.textContent = '‚ùå Veuillez entrer un code promo';
        promoMessage.style.color = '#e74c3c';
        return;
    }
    
    // D√©sactiver le bouton pendant la validation
    promoButton.disabled = true;
    promoButton.textContent = 'Validation...';
    
    try {
        // Simulation de validation - √Ä REMPLACER par ton syst√®me Firebase
        const validationResult = await simulatePromoValidation(code);
        
        if (validationResult.valid) {
            applyPromoToCart(code, validationResult.discount);
            
            // Sauvegarder pour les autres pages
            localStorage.setItem('anduxara_active_promo', JSON.stringify({
                code: code,
                discount: validationResult.discount,
                appliedAt: new Date().toISOString()
            }));
            
            promoMessage.textContent = `‚úÖ Code "${code}" appliqu√© : ${validationResult.discount}% de r√©duction !`;
            promoMessage.style.color = '#27ae60';
            promoInput.value = '';
            
        } else {
            promoMessage.textContent = `‚ùå Code "${code}" invalide ou expir√©`;
            promoMessage.style.color = '#e74c3c';
        }
        
    } catch (error) {
        console.error('Erreur validation promo:', error);
        promoMessage.textContent = '‚ùå Erreur de validation';
        promoMessage.style.color = '#e74c3c';
    } finally {
        // R√©activer le bouton
        promoButton.disabled = false;
        promoButton.textContent = 'Appliquer ‚úÖ';
    }
}

// Simulation de validation - √Ä ADAPTER avec ton syst√®me Firebase
async function simulatePromoValidation(code) {
    // Codes promo de test - REMPLACE par ta logique Firebase
    const validCodes = {
        'BIENVENUE15': 15,
        'ANDU2025': 20,
        'SOLDE30': 30,
        'PREMIUM25': 25
    };
    
    // Simuler un d√©lai r√©seau
    await new Promise(resolve => setTimeout(resolve, 1000));
    
    if (validCodes[code]) {
        return {
            valid: true,
            discount: validCodes[code],
            message: `R√©duction de ${validCodes[code]}% appliqu√©e`
        };
    } else {
        return {
            valid: false,
            message: 'Code invalide'
        };
    }
}

