    if (!firebase.apps.length) {
        firebase.initializeApp(firebaseConfig);
        console.log("✅ Firebase initialisé avec succès !");


// ===== FONCTIONS DES MODALS =====
function showLoginModal() {
    console.log("🔓 Ouverture modal connexion");
    document.getElementById('loginModal').style.display = 'flex';
}

function showSignupModal() {
    console.log("📝 Ouverture modal inscription");
    document.getElementById('signupModal').style.display = 'flex';
}

function closeModal(modalId) {
    console.log("❌ Fermeture modal:", modalId);
    document.getElementById(modalId).style.display = 'none';
}

function copierLienParrainage() {
    console.log("🎁 Clic parrainage");
    alert("Fonction parrainage - À développer");
}

// Fermer les modals en cliquant dehors
window.addEventListener('click', function(e) {
    if (e.target.classList.contains('modal')) {
        e.target.style.display = 'none';
    }
});
    }
} catch (error) {
    console.error("❌ Erreur initialisation Firebase:", error);
}

const auth = firebase.auth();
const db = firebase.firestore();

// ===== AUTHENTIFICATION FIREBASE =====
document.addEventListener('DOMContentLoaded', function() {
    // Vérifier si Firebase est initialisé
    if (!firebase.apps.length) {
        console.error("❌ Firebase non initialisé !");
        return;
    }

    // Formulaire de connexion
    const loginForm = document.getElementById('loginForm');
    if (loginForm) {
        loginForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            
            try {
                console.log("🔐 Tentative de connexion:", email);
                const userCredential = await firebase.auth().signInWithEmailAndPassword(email, password);
                const user = userCredential.user;
                
                alert("✅ Connexion réussie: " + user.email);
                closeModal('loginModal');
                
                // Mettre à jour l'interface
                document.getElementById('userDisplayName').textContent = user.displayName || user.email;
                document.getElementById('userEmail').textContent = user.email;
                document.getElementById('userProfile').style.display = 'block';
                document.getElementById('authButtons').style.display = 'none';
                document.getElementById('promoSection').style.display = 'block';
                
            } catch (error) {
                console.error("❌ Erreur connexion:", error);
                alert("❌ Erreur: " + error.message);
            }
        });
    }
    
    // Formulaire d'inscription
    const signupForm = document.getElementById('signupForm');
    if (signupForm) {
        signupForm.addEventListener('submit', async function(e) {
            e.preventDefault();
            const name = document.getElementById('signupName').value;
            const email = document.getElementById('signupEmail').value;
            const password = document.getElementById('signupPassword').value;
            
            try {
                console.log("📝 Tentative d'inscription:", email);
                const userCredential = await firebase.auth().createUserWithEmailAndPassword(email, password);
                const user = userCredential.user;
                
                // Mettre à jour le profil
                await user.updateProfile({
                    displayName: name
                });
                
                alert("✅ Compte créé avec succès: " + user.email);
                closeModal('signupModal');
                
            } catch (error) {
                console.error("❌ Erreur inscription:", error);
                alert("❌ Erreur: " + error.message);
            }
        });
    }
    
    console.log("✅ Firebase et authentification configurés !");
});
</script>
