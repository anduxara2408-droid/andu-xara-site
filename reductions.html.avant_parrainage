// ===== FONCTIONS GLOBALES =====
function showLoginModal() {
    console.log("🔓 Ouverture connexion");
    document.getElementById('loginModal').style.display = 'flex';
}

function showSignupModal() {
    console.log("📝 Ouverture inscription");
    document.getElementById('signupModal').style.display = 'flex';
}

function closeModal(modalId) {
    document.getElementById(modalId).style.display = 'none';
}

function copierLienParrainage() {\n    console.log("🎁 Clic parrainage");\n    alert("Fonction parrainage - À développer");\n}\n

// ===== FONCTION DE DÉCONNEXION =====
function deconnecter() {
    console.log("🚪 Tentative de déconnexion");
    firebase.auth().signOut().then(() => {
        console.log("✅ Déconnexion réussie");
        // Mettre à jour l'interface
        document.getElementById('userProfile').style.display = 'none';
        document.getElementById('authButtons').style.display = 'flex';
        document.getElementById('promoSection').style.display = 'none';
        document.getElementById('parrainageSection').style.display = 'none';
        alert("✅ Déconnexion réussie !");
    }).catch((error) => {
        console.error("❌ Erreur déconnexion:", error);
        alert("❌ Erreur lors de la déconnexion");
    });
}


